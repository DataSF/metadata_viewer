<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">


<div class="container">
<% if@dataset_info['Fields'].respond_to?('each') %>

 <div class="panel panel-default">
 <div class="panel-body">
 <H1> Metadata for  <%= @dataset_info['Dataset Name'] %>  </H1>
  <h2> Overview </h2>
  <ul>
      <% @dataset_info.each do |info, val| %>
      <% if info != 'Fields' %>
        <li><b><%=info%></b> <%=val %></li>
        <% end %>
        <% end %>
     </ul>
  </div>
</div>
<div>
<table id="metadata_columns" class="table tablesorter table-striped table-hover">
<thead>
<tr>
      <th><h4>Field Name </h4></th>
      <th><h4>Field Type</h4> </th>
      <th><h4>Field Definition</h4> </th>
    </tr>
    </thead>
    <tbody>
    <% @dataset_info['Fields'].each do |field| %>
      <tr>
      <td>
        <b><%= field['field_name'] %></b>
      </td>
      <td>
        <%= field['field_type'] %>
      </td>
      <td>
        <%= field['field_definition'] %>
      </td>
    <% end %>
    </tr>
    </tbody>
    </table>
</div>

<%else %>
 <div style="padding-top:10%;"></div>
 <div class="panel panel-defaul">
 <div class="panel-body">
  <div style="color:orange;font-size:300%;padding-bottom:3%"><%=@dataset_info['fields'] %> </div>
  <img src="https://upload.wikimedia.org/wikipedia/commons/e/ee/Tumbeasts_run1.png" alt="404">

  </div>
</div>
<% end %>

</div>



 <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
