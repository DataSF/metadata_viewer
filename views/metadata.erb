<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.28.4/js/jquery.tablesorter.min.js"></script>

<script type="text/javascript">
$(document).ready(function(){
$(function(){
$("#metadata_columns").tablesorter();
});
});
</script>
